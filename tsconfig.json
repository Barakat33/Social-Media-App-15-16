{
  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "./dist",

    // Environment Settings
    "module": "commonjs",
    "target": "es2019",
    "types": ["node"],
    "lib": ["esnext"],

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Strict Mode
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Optimization
    "skipLibCheck": true,
    "isolatedModules": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
